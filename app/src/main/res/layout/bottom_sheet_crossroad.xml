<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/bottomSheet"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar_canary2"
    android:orientation="vertical"
    android:padding="12dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="136dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bottomSheet_crossroad_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="횡단보도"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/bottomSheet_pname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위치정보없음"
                    />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/bottomSheet_crossroad_accident_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="위험도"
                    />
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/crossroad_data_imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/canary_shadow" />
    </LinearLayout>

</LinearLayout>