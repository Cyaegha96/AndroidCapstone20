<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/bottomSheet"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar_canary"
    android:orientation="vertical"
    android:padding="12dp"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bottomSheet_accident_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보행자 사고다발지역"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <TextView
                    android:id="@+id/bottomSheet_accident_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" (발생년도) "
                    />
                <TextView
                    android:layout_marginLeft="30dp"
                    android:id="@+id/bottomSheet_place_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사고지역위치명"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="발생건수"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/bottomSheet_accident_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="발생건수"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="사상자수"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/bottomSheet_casualties_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="사상자수"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="사망자수"
                    android:textStyle="bold"
                    android:textColor="@color/design_default_color_error"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/bottomSheet_dead_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="사망자수"
                    android:textSize="12sp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="중상자수"
                    android:textStyle="bold"
                    android:textColor="#f5b042"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/bottomSheet_serious_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="중상자수"
                    android:textSize="12sp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="경상자수"
                    android:textStyle="bold"
                    android:textColor="#4d9456"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/bottomSheet_slight_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="경상자수"
                    android:textSize="12sp"/>

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="부상자수"
                    android:textColor="#42c5f5"
                    android:textStyle="bold"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/bottomSheet_injured_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="부상자수"
                    android:textSize="12sp"/>

            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/accident_data_imageView"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            app:srcCompat="@drawable/canary_shadow" />
    </LinearLayout>

</LinearLayout>